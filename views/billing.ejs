<html ng-app="bill">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular-route.js"></script>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<!-- LOAD ANGULAR -->

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<title>Customer Ride</title>
<link rel="shortcut icon" href="/img/uber.ico" />
<script src="./angularjs/bill.js"></script>
<script src="http://maps.google.com/maps/api/js?libraries=placeses,visualization,drawing,geometry,places"></script>
<!-- <script src="http://code.angularjs.org/1.3.15/angular.js"></script> -->
<script src="http://rawgit.com/allenhwkim/angularjs-google-maps/master/build/scripts/ng-map.js"></script>
<style>

.bold
{
	font-weight: bold;
}

</style>
</head>
<body>
	<div style="background-color: black; color: white; padding: 35px;">
		<div class="container">
			<div class="row" align="center">
				<div class="col-md-10">
					<span><img src="/img/uber_logo.png"
						style="margin-left: 200px" height="30px"></span>
				</div>
				<div class="col-md-2" onmouseover="">
					<div class="dropdown">
						<button class="dropdown-toggle" style="background-color: black"
							type="button" data-toggle="dropdown">
							<span><img src="/img/profile.jpeg" class="img-circle"
								height=25px><b> YANKI </b><span>
									<span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<li><a href="/ride">Ride</a></li>
							<li><a href="/customerHome">Profile</a></li>
							<li><a href="/customerTrips">My Trips</a></li>
							<li><a href="/customerPayment">My Payments</a></li>
							<li><a href="/logout">Logout</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-3" style="background-color: white">

				<div class="panel panel-default bootcards-richtext" align="center">
					<div class="panel-heading" style="background-color: white">
						<img src="/img/profile.jpeg" class="img-circle" height=200px>
						<b>YANKI</b> <br>
						<div align="left"></div>

					</div>
					<div class="panel-body">
						<b> <a class="list-group-item" href="/ride">Ride</a> <a
							class="list-group-item" href="/customerHome">Profile</a> <a
							class="list-group-item" href="/customerTrips">My Trips</a> <a
							class="list-group-item" href="/customerPayment">My Payments</a> <a
							class="list-group-item" href="/logout">Logout</a>
						</b>
					</div>
				</div>
			</div>



			<div class="col-md-9" style="background-color: white" ng-controller="bill">

				<div class="page-lead separated--bottom" > 
					<center><h1 class="flush">Bill</h1></center>
				</div>
				<div style="border: 2px solid black; width:930px;margin-bottom: 50px">
					 <!-- start upperpart -->
					<div class="row" style="margin-left: 10px;margin-top: 10px">
						<div class="col-md-6">
						
							<div class="bold">
								Thanks for riding Uber!
							</div>
							<br/>
							
							<div>
								<div class="bold">BILLED TO</div>
								<div>customer name</div>
							</div>
							<br/>
							
							<div>
								<div class="bold">TRIP REQUEST DATE</div>
								<div>date</div>
							</div>
							<br/>
							
							<div>
								<div class="bold">PICKUP LOCATION</div>
								<div> 201 s 4th </div>
							</div>
							<br/>
							
							<div>
								<div class="bold">DROPOFF LOCATION</div>
								<div> 1306 the alameda</div>
							</div>
							<br/>
							
							<div>
								<div class="bold">CREDIT CARD</div>
								<div><img src="/img/card_icon.PNG">Personal Visa</div>
							</div>
							<br/>
							
							<div>
								<div class="bold">BILLED TO CARD</div>
								<div style="font-weight: bolder; font-size: 35px">$24</div>
							</div>
						
						</div>
						
						<div class="col-md-6">
						
							<div class="row">
								<div class="bold">DRIVER</div>
								<div> driver name</div>
							</div>
							<br>
							<div class="row" style="border: 1px solid black; width:430px; height:350px">
								map
							</div>
						
						</div>
					</div>
						<!-- end upperpart -->
					
					<div class="row" style="margin-left: 1px">
						
							___________________________________________________________________________________________________________________
						<br>
						<br>
					</div>
					
						<!-- start lower part -->
					<div class="row" style="margin-left: 10px;margin-bottom: 10px">
						<div  class="col-md-6">
						
							<div class="row">
								<div class="bold">FARE BREAKDOWN</div>
								<br/>
								
								<div>CHARGES</div>
								<div>
									<div style="display: inline;"> Base Fare</div>
									<div style="display: inline; float: right;margin-right: 50px"> $7.00</div>
								</div>
								<div>
									<div style="display: inline;"> Distance</div>
									<div style="display: inline; float: right;margin-right: 50px"> $8.84</div>
								</div>
								<div>
									<div style="display: inline;"> Time</div>
									<div style="display: inline; float: right;margin-right: 50px"> $9.08</div>
								</div>
								<div>
									<div style="display: inline;"> Rounding Down</div>
									<div style="display: inline; float: right;margin-right: 50px"> ($0.90)</div>
								</div>
								<div style="border-top: solid 1px black; width:430px">
								
								</div>
								<div>
									<div style="display: inline;">Discount Subtotal</div>
									<div style="display: inline; float: right;margin-right: 50px"> ($0.90)</div>
								</div>
							</div>
							<br>
							<div class="row">
								<div>TOTALS</div>
								<div>
									<div style="display: inline;"> Total Fare</div>
									<div style="display: inline; float: right;margin-right: 50px"> $24.00</div>
								</div>
								<div>
									<div style="display: inline;"> Billed to Card</div>
									<div style="display: inline; float: right;margin-right: 50px"> ($24.00)</div>
								</div>
								<div>
									<div style="display: inline;"> Outstanding Balance</div>
									<div style="display: inline; float: right;margin-right: 50px"> $0.00</div>
								</div>
							</div>
						
						</div>
						
						<div  class="col-md-6">
						
							<div class="bold">TRIP STATISTICS</div>
							<br/>
							
							<div>
								<div>DISTANCE</div>
								<div style="font-weight: bolder; font-size: 20px">3.34 miles</div>
							</div>
							<br/>
							
							<div>
								<div>DURATION</div>
								<div style="font-weight: bolder; font-size: 20px">19 minutes, 46 seconds</div>
							</div>
							<br/>
							
							<div>
								<div>AVERAGE SPEED</div>
								<div style="font-weight: bolder; font-size: 20px ">10.13 mph</div>
							</div>
							<br/>
							
						</div>
					</div>
						<!-- end lower part -->
				</div>
			</div>
		</div>
	</div>
</body>

</html>